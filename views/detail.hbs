<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <p class="mb-0 d-flex flex-grow-1 bd-highlight">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2 mr-1"></i>
          類別：
        </span>
        {{restaurant.category}}
        <a href="/" class="ml-auto bd-highlight">
          <button class="btn btn-info">返回</button>
        </a>
      </p>

      <p class="mb-2">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2 mr-1"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-2">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2 mr-1" style="font-size: 19px;"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
    </div>
  </div>
</div>