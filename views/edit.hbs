<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="create-form">
      <form action="/restaurant/{{restaurant._id}}/edit" method="POST">
        <div class="form-row justify-content-center" style="font-size: 20px;">
          <div class="form-group col-md-6">
            <label for="name">
              <i class="fas fa-drumstick-bite"></i>
              Restaurant Name
            </label>
            <input type="text" class="form-control text-lg" id="name" name="name" placeholder="餐廳名稱"
              value="{{restaurant.name}}" required>
          </div>
          <div class="form-group col-md-4 ml-2">
            <label for="category">
              <i class="fas fa-folder-open"></i>
              Category
            </label>
            <select id="category" class="form-control" name="category" required>
              <option value="">選擇餐廳類型</option>
              <option value="美式" {{#if_equal restaurant.category '美式'}} selected {{/if_equal}}>美式</option>
              <option value="日本料理" {{#if_equal restaurant.category '日本料理'}} selected {{/if_equal}}>日本料理</option>
              <option value="義式餐廳" {{#if_equal restaurant.category '義式餐廳'}} selected {{/if_equal}}>義式餐廳</option>
              <option value="中式餐廳" {{#if_equal restaurant.category '中式餐廳'}} selected {{/if_equal}}>中式餐廳</option>
              <option value="泰式料理" {{#if_equal restaurant.category '泰式餐廳'}} selected {{/if_equal}}>泰式料理</option>
              <option value="中東料理" {{#if_equal restaurant.category '中東料理'}} selected {{/if_equal}}>中東料理</option>
              <option value="異國風味" {{#if_equal restaurant.category '異國風味'}} selected {{/if_equal}}>異國風味</option>
              <option value="咖啡" {{#if_equal restaurant.category '咖啡'}} selected {{/if_equal}}>咖啡</option>
              <option value="酒吧" {{#if_equal restaurant.category '酒吧'}} selected {{/if_equal}}>酒吧</option>
            </select>
          </div>
          <div class="form-group col-10">
            <label for="address">
              <i class="fas fa-map-marker-alt"></i>
              Address
            </label>
            <input type="text" class="form-control" id="address" name="location" placeholder="餐廳地址"
              value="{{restaurant.location}}" required>
          </div>
          <div class="form-group col-md-6">
            <label for="phone">
              <i class="fas fa-mobile-alt"></i>
              Phone
            </label>
            <input type="text" class="form-control" id="phone" name="phone" placeholder="Phone number"
              value="{{restaurant.phone}}" required>
          </div>
          <div class="form-group col-md-4">
            <label for="rating">
              <i class="fas fa-star"></i>
              Rating
            </label>
            <input type="number" min="0" max="5" step="0.5" class="form-control" id="rating" name="rating"
              placeholder="4.0" value="{{restaurant.rating}}">
          </div>
          <div class="form-group col-10">
            <label for="image">
              <i class="fas fa-images"></i>
              Image
            </label>
            <input type="text" class="form-control" id="image" name="image" placeholder="http://"
              value="{{restaurant.image}}">
          </div>
          <div class="form-group col-10">
            <label for="google_map">
              <i class="fas fa-map-marked-alt"></i>
              Google Map
            </label>
            <input type="text" class="form-control" id="google_map" name="google_map" placeholder="Google map URL"
              value="{{restaurant.google_map}}">
          </div>
          <div class="form-group col-md-10">
            <label for="description">
              <i class="fas fa-file-alt"></i>
              Description
            </label>
            <textarea type="text" class="form-control form-description" id="description"
              name="description">{{restaurant.description}}</textarea>
          </div>
          <div class="form-group col-md-10 justify-content-start" style="margin-top: 10px;">
            <button type="submit" class="btn btn-info">
              Save
            </button>
            <a href="/">
              <button type="button" class="btn btn-warning ml-3">
                Back
              </button>
            </a>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>